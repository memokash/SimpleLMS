{
  "name": "simple-lms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "dev:validated": "npm run validate:env && next dev",
    "build:validated": "npm run validate:env && next build",
    "build:analyze": "set ANALYZE=true&& npm run build",
    "start": "npm run validate:env && next start",
    "lint": "next lint",
    "validate:env": "node scripts/validate-environment.js",
    "security:check": "npm run validate:env && npm audit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:comprehensive": "jest __tests__/comprehensive-functionality-test.ts --verbose",
    "test:coverage": "jest --coverage",
    "test-claude": "tsx test-claude.ts",
    "supabase:generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > lib/supabase/database.types.ts",
    "performance:audit": "tsx scripts/performance-audit.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "@sendgrid/mail": "^7.7.0",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "claude-code": "^0.0.2",
    "date-fns": "^4.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.263.1",
    "next": "^14.2.31",
    "openai": "^5.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.8.0",
    "stripe": "^18.4.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.31",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.9",
    "@types/react": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.31",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
